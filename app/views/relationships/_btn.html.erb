<% if current_user != user%>
  <% if current_user.followings?(user) %>
    <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>